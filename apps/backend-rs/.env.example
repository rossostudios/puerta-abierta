# ── Server ──
APP_NAME=Casaora API
ENVIRONMENT=development
API_PREFIX=/v1
HOST=0.0.0.0
PORT=8000

# ── CORS & Security ──
CORS_ORIGINS=http://localhost:3000
TRUSTED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=100

# ── Feature Flags ──
DOCS_ENABLED=true
DEV_AUTH_OVERRIDES_ENABLED=false
MARKETPLACE_PUBLIC_ENABLED=true
TRANSPARENT_PRICING_REQUIRED=true
APPLICATIONS_PIPELINE_ENABLED=true
LEASE_COLLECTIONS_ENABLED=true
NOTIFICATION_RULES_ENFORCED=false
AI_AGENT_ENABLED=true
# Production launch recommendation (cost control): AI_AGENT_ENABLED=false

# ── AI ──
OPENAI_API_KEY=
OPENAI_PRIMARY_MODEL=gpt-5.2
OPENAI_FALLBACK_MODELS=gpt-5.1-mini,gpt-4.1-mini
AI_AGENT_MAX_TOOL_STEPS=6
AI_AGENT_TIMEOUT_SECONDS=45

# ── Supabase ──
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWKS_URL=
SUPABASE_DB_URL=
