# ── Server ──
APP_NAME=Casaora API
ENVIRONMENT=development
API_PREFIX=/v1
HOST=0.0.0.0
PORT=8000

# ── CORS & Security ──
CORS_ORIGINS=http://localhost:3000
TRUSTED_HOSTS=localhost,127.0.0.1

# ── Feature Flags ──
DOCS_ENABLED=true
DEV_AUTH_OVERRIDES_ENABLED=false
MARKETPLACE_PUBLIC_ENABLED=true
TRANSPARENT_PRICING_REQUIRED=true
APPLICATIONS_PIPELINE_ENABLED=true
LEASE_COLLECTIONS_ENABLED=true
AI_AGENT_ENABLED=true

# ── AI ──
OPENAI_API_KEY=
OPENAI_PRIMARY_MODEL=gpt-5.2
OPENAI_FALLBACK_MODELS=gpt-5.1-mini,gpt-4.1-mini
AI_AGENT_MAX_TOOL_STEPS=6
AI_AGENT_TIMEOUT_SECONDS=45

# ── Supabase ──
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWKS_URL=
SUPABASE_DB_URL=

# ── Dev Defaults (leave empty in production) ──
DEFAULT_ORG_ID=
DEFAULT_USER_ID=

# ── Internal API (for cron jobs) ──
INTERNAL_API_KEY=

# ── WhatsApp Business API (Meta Cloud API) ──
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
MARKETPLACE_WHATSAPP_PHONE_E164=

# ── Email (Resend) ──
RESEND_API_KEY=
EMAIL_FROM_ADDRESS=noreply@casaora.co

# ── Stripe Billing ──
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_TRIAL_DAYS=14

# ── Public URLs ──
APP_PUBLIC_URL=http://localhost:3000
